{
  "kind": "collectionType",
  "collectionName": "Resources",
  "info": {
    "name": "Resource Item"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "title_mandarin": {
      "type": "string",
      "required": true
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "private",
        "public",
        "draft"
      ],
      "default": "draft",
      "required": true
    },
    "description_mandarin": {
      "type": "richtext"
    },
    "media_embed": {
      "type": "string",
      "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
    },
    "categories": {
      "via": "resource_items",
      "collection": "categories"
    }
  }
}
