{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "name": "collection",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "previewable": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "collections"
    },
    "items": {
      "via": "collections",
      "collection": "item",
      "dominant": true
    },
    "title": {
      "type": "string",
      "unique": true,
      "required": true,
      "default": "My Collection"
    },
    "featured_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "is_public": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "collection_categories": {
      "via": "collections",
      "collection": "collection-category"
    }
  }
}
