{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "name": "item",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "description_short": {
      "type": "string",
      "required": true
    },
    "description_long": {
      "type": "richtext"
    },
    "media": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "categories": {
      "via": "items",
      "collection": "category",
      "dominant": true
    },
    "tags": {
      "via": "items",
      "collection": "tag",
      "dominant": true
    },
    "link": {
      "type": "component",
      "repeatable": true,
      "component": "item-links.link"
    },
    "collections": {
      "via": "items",
      "collection": "collection",
      "private": true
    }
  }
}
