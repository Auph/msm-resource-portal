{
  "kind": "collectionType",
  "collectionName": "collections",
  "info": {
    "singularName": "collection",
    "pluralName": "collections",
    "displayName": "Collection",
    "name": "collection"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "collections"
    },
    "items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::item.item",
      "inversedBy": "collections"
    },
    "title": {
      "type": "string",
      "default": "My Collection",
      "required": true,
      "unique": true
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "is_public": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "text"
    },
    "collection_categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::collection-category.collection-category",
      "mappedBy": "collections"
    }
  }
}
